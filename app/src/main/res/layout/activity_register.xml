<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:scrollbars="none"
        android:fillViewport="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="@dimen/margin_20dp"
            android:background="@drawable/bg_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                app:layout_constraintBottom_toBottomOf="@id/guidelineCenter"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin_30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.constraintlayout.widget.Guideline
                app:layout_constraintGuide_percent="0.3"
                android:orientation="horizontal"
                android:id="@+id/guidelineCenter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:background="@drawable/bg_edit_text_username"
                android:layout_marginTop="@dimen/margin_10dp"
                android:padding="@dimen/padding_edt"
                android:hint="@string/hint_username"
                app:layout_constraintTop_toTopOf="@+id/guidelineCenter"
                android:inputType="textEmailAddress"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/edtUsername_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:background="@drawable/bg_edit_text_username"
                android:layout_marginTop="@dimen/margin_15dp"
                android:padding="@dimen/padding_edt"
                android:hint="@string/hint_email"
                app:layout_constraintTop_toBottomOf="@+id/edtUsername_register"
                android:inputType="textEmailAddress"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/edtEmail_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="@dimen/margin_15dp"
                app:layout_constraintTop_toBottomOf="@id/edtEmail_register"
                app:hintEnabled="false"
                app:errorEnabled="false"
                app:passwordToggleEnabled="true"
                android:id="@+id/layoutPassword"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:background="@drawable/bg_edit_text_username"
                    android:padding="@dimen/padding_edt"
                    android:hint="@string/hint_password"
                    android:maxLength="20"
                    android:inputType="textPassword"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/edtPassword_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="@dimen/margin_15dp"
                app:layout_constraintTop_toBottomOf="@id/layoutPassword"
                app:hintEnabled="false"
                app:errorEnabled="false"
                app:passwordToggleEnabled="true"
                android:id="@+id/layoutRePassword"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:background="@drawable/bg_edit_text_username"
                    android:padding="@dimen/padding_edt"
                    android:hint="@string/hint_repassword"
                    android:maxLength="20"
                    android:inputType="textPassword"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/edtRePassword_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/margin_15dp"
                android:id="@+id/layoutRandom"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layoutRePassword"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:hint="Enter capcha"
                    android:inputType="text"
                    android:layout_marginRight="@dimen/margin_20dp"
                    android:layout_weight="0.6"
                    android:padding="@dimen/padding_edt"
                    android:id="@+id/edtCheckRandom"
                    android:background="@drawable/bg_edit_text_username"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtRandom"
                    android:gravity="center"
                    android:textStyle="bold|italic"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:layout_weight="0.4"
                    android:background="@drawable/bg_text_view"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:padding="@dimen/margin_15dp"
                    android:src="@drawable/ic_baseline_refresh_24"
                    android:background="@drawable/selector_button_login"
                    android:id="@+id/btnReFresh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


            <Button
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/selector_button_login"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/btnRegister"
                android:textAllCaps="false"
                android:text="@string/btn_register"
                android:layout_marginTop="@dimen/margin_20dp"
                app:layout_constraintTop_toBottomOf="@id/layoutRandom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>